#!/bin/env goo
use tree from game.animation_tree;
use game;

# or 
let animation_tree = use("game/animation_tree");
let { tree } = animation_tree;
let game = use("game");


let a = import("std");

json:parse();

tree.animation {
  name = "Idle",
  on_update = fn {
    if abs(game.player.velocity.x) > 0.1 {
      tree.switch_to "Running";
    }
  }
};

